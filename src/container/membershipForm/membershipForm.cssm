.container {
    margin: 0px 120px;
}
.container .header {
    font-size: 16px;
    text-transform: uppercase;
    font-weight: 500;
    color: #1D4E72;
    margin-top: 40px;
    width: 100%;
    flex-shrink: 0;
    padding-bottom: 20px;
}

.container .section {
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
}

.container .section > div:not(:first-child) {
    width: 100%;
    position: relative;
    display: flex;
    flex-wrap: wrap;
}
.container .fieldGroup {
    display: flex;
}

.container .section .fieldGroup > div {
    width: 50%;
    display: flex;
    align-items: flex-end;
}

.container label,
.container input,
.container select {
    line-height: 2.5;
    display: inline-block;
}

.container label {
    border-bottom: 1px solid #BDBDBD;
    font-weight: 400;
    margin-bottom: 0px;
    text-transform: capitalize;
}
.container label abbr {
    border-bottom: none;
    text-decoration: none;
    font-weight: 900;
    color: #B3302C;
    padding-left: 4px;
}

.container input,
.container select {
    border: unset;
    border-bottom: 1px solid #BDBDBD;
    border-radius: 0px;
    box-shadow: none;
    -webkit-border-radius: 0px;
    height: 36px;
    width: unset;
    flex: 1;
}
.container input {
    color: #3A8EE8;
}
.container select {
    -webkit-appearance: unset;
    position: relative;
    background-image: url("data:image/svg+xml;utf8,<svg version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' width='24' height='24' viewBox='0 0 24 24'><path fill='#444' d='M7.406 7.828l4.594 4.594 4.594-4.594 1.406 1.406-6 6-6-6z'></path></svg>");
    background-position: calc(100% - 8px) 50%;
    background-repeat: no-repeat;
	line-height: 1;
}
.container select::after {
    content: '';
    position: absolute;
    right: 8px;
}
.container input:focus,
.container select:focus {
    box-shadow: none;
}

.waiver {
    margin-top: 24px;
    display: flex;
}
.waiver label,
.waiver input {
    height: unset;
    line-height: unset;
}
.waiver label {
    margin-right: 24px;
}
.waiver label,
.waiver input {
    border-bottom: 0px;
}
.waiver label span {
    display: none;
}
.waiver a:hover {
    cursor: pointer;
}

.container .button {
	margin: 48px 0px;
	width: 100%;
	display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.modal {
    position: absolute;
    top: 0;
    left: 0;
    padding-top: 80px;
    width: 100%;
    height: 100%;
    background: rgba(29, 78, 114, 0.8);
    z-index: 3;
    transition: opacity 200ms linear;
    opacity: 1;
}
.modal.closed {
    opacity: 0;
    z-index: -1;
    transition: opacity 200ms linear, z-index 50ms linear 250ms;
}
.modal > div {
    width: 75%;
    height: 85%;
    padding: 12px 72px;
    background: white;
    margin: auto;
    border-radius: 4px;
    position: relative;
    overflow: scroll;
}
.modal > div.small {
    width: 420px;
    height: 200px;
    padding: 12px 24px;
}
.modal > div .close {
    position: absolute;
    top: 24px;
    right: 12px;
    height: 24px;
    width: 24px;
}
.modal > div .close:hover {
    cursor: pointer;
}
.modal > div .close svg > g > g {
    fill: #CCCCCC;
    stroke-width: 2px;
    transition: fill 100ms linear;
}
.modal > div .close:hover svg > g > g {
    fill: #666666;
    cursor: pointer;
}

.modal > div h3 {
    font-size: 18px;
    color: #1D4E72;
    margin: 12px 0px;
}
.modal > div p {
    margin: 20px 0px;
    font-size: 13px;
}

/**** Mobile *****/
@media only screen and (max-width: 425px) {
    .container {
        margin: 0px 20px;
    }
}
@media only screen and (max-width: 768px) {
    .container .section .fieldGroup > div {
        margin: 0px;
    }
}
