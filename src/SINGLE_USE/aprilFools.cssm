.container {
    margin-top: 120px;
}

.image {
    max-height: 450px;
    width: 70%;
    margin: 0px auto;
    display: flex;
    transition: width 150ms linear;
}

@media only screen and (max-width: 750px) {
    .image {
        width: 80%;
    }
}

@media only screen and (max-width: 425px) {
    .image {
        width: 90%;
    }
}
