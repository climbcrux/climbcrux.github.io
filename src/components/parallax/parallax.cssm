.container {
    height: 100%;
    width: 100%;
    position: relative;
}

.layer {
    height: 100%;
    width: 100%;

    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: bottom;
}

.layerContent {
    height: 100%;
    width: 100%;

    display: flex;
    justify-content: center;
    align-items: center;
}
